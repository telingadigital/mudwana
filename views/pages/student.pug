extends ../layouts/admin.pug

block css
	style().
		.vertical-space {
			margin-top: 50px;
		}

block content
	div(class='container')
		div(class='row vertical-space')
			div(class='col-lg-8 offset-lg-2')
				a(href="/admin/student/create" class='btn btn-warning') Add
				table(class='table table-hover vertical-space')
					thead
						tr
							th(scope='col') Id
							th(scope='col') Name
							th(scope='col') Email
							th(scope='col') Age
							th(scope='col') About
							th(scope='col') Action
					tbody
						each student in students
							tr
								th(scope='row') 
									a(href="/admin/student/"+student.id) #{student.id}
								td #{student.name}
								td #{student.email}
								td #{student.age}
								td #{student.about}
								td
									a(href="/admin/student/"+student.id+"/edit" class='btn btn-warning') Edit
block js